{
  "name": "btecifyv3",
  "version": "0.0.1",
  "description": "3rd version of btecify using electron so that the user interface doesnt look like it was made 50 years ago on the first IBM computer",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --targets @electron-forge/maker-zip",
    "experiment": "node ./experimental/youtubedl.js",
    "build": "tsc && copyfiles src/index.html src/style.css src/assets/** dist",
    "watch": "tsc -w"
  },
  "author": "Taran McVay",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "copyfiles": "^2.4.1",
    "electron": "^15.3.0",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "axios": "^0.21.1",
    "clipboardy": "^2.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "spotify-web-api-js": "^1.5.2",
    "uuid": "^8.3.2",
    "youtube-dl-exec": "^1.2.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": "\\/db\\/|\\/db$",
        "icon": "./src/assets/btecify.ico",
        "overwrite": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "btecifyv3"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
